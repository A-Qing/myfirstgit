<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:layout_width="187dp"
              android:layout_height="100dp"
              android:background="@drawable/mult_bg">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_fileImg1"
        android:src="@drawable/ic_action_collection"
        android:layout_alignBottom="@+id/textView_lastmodify1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:singleLine="true"
        android:maxEms="8"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="italic"

        android:id="@+id/textView_filename1"
        android:layout_alignTop="@+id/imageView_fileImg1"
        android:layout_alignStart="@+id/textView_filesize1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView_filesize1"
        android:text="new Text"
        android:textSize="12sp"
        android:singleLine="true"
        android:maxEms="10"
        android:layout_marginStart="13dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView_fileImg1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:singleLine="true"
        android:maxEms="8"
        android:textSize="12sp"
        android:id="@+id/textView_lastmodify1"
        android:layout_below="@+id/textView_filesize1"
        android:layout_alignStart="@+id/textView_filesize1" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton1"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:src="@drawable/ic_action_overflow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>